<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- request : views -->
    <record id="request_view_search" model="ir.ui.view">
        <field name="name">request.search</field>
        <field name="model">asset.nfs.request</field>
        <field name="arch" type="xml">
            <search string="Maintenance Request Search">
                <searchpanel>
                        <field name="type_id" enable_counters="0" expand="0"/>
                        <!-- <field name="stage_id"/> -->
                        <field name="company_id" enable_counters="0" expand="0"/>
                </searchpanel>
                <field name="name"/>
                <field name="user_id"/>
                <field name="company_id"/>
                <filter string="Мої запити" name="my_request" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="До виконання" name="todo" domain="[('stage_id.is_closed', '=', False)]"/>
                <separator/>
                <separator/>
                <filter name="filter_request_date" date="request_date"/>
                <filter name="filter_close_date" date="close_date"/>
                <separator/>
                <!-- <group  expand='0' string='Group by...'>
                    <filter string='Assigned to' name="assigned" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string='Category' name="category" domain="[]" context="{'group_by' : 'category_id'}"/>
                    <filter string='Stage' name="stages" domain="[]" context="{'group_by' : 'stage_id'}"/>
                    <filter string='Created By' name='created_by' domain="[]" context="{'group_by': 'owner_user_id'}"/>
                </group> -->
            </search>
        </field>
    </record>

    <record id="request_view_form" model="ir.ui.view">
        <field name="name">request.form</field>
        <field name="model">asset.nfs.request</field>
        <field name="arch" type="xml">
            <form string="Запит" >
                <header>
                    <button string="Set to item" name="set_request_to_item" type="object" class="oe_highlight oe_read_only" groups="base.group_system" attrs="{'invisible': [('request_item_count', '>',0)]}" confirm="Привя'зати запит до майна?"/>
                    <button string="Затвердити" name="approve_request" type="object" class="oe_highlight oe_read_only" attrs="{'invisible': [('stage_code', '=', 'approved')]}" confirm="Затвердити запит?"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" attrs="{'invisible': [('active', '=', False)]}"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button string="Майно на виключення" class="oe_stat_button" type="object" name="request_item_action" groups="base.group_user" icon="fa-barcode" attrs="{'invisible': [('type_code', '!=', 'exclude')]}"/>
                        <button string="Майно в запиті" class="oe_stat_button" type="object" name="request_list_item_action" groups="base.group_user" icon="fa-barcode" attrs="{'invisible': [('type_code', '=', 'exclude')]}"/>
                        <!-- <button name="request_list_item_action" type="object" class="oe_stat_button" icon="fa-barcode" attrs="{'invisible': [('type_code', '=', 'exclude')]}">
                            <field string="Майно в запиті" name="request_item_count" widget="statinfo"/>
                        </button> -->
                        <!-- <button string="Документи" class="oe_stat_button" type="action" name="dgf_asset_nfs.attachment_action" groups="dgf_asset_nfs.group_assetsnfs_reader" icon="fa-file-text" /> -->
                    </div>
                    <div attrs="{'invisible': [('active', '=', True)]}">
                        <span class="badge badge-warning float-right">Архівовано</span>
                    </div>
                    <group>
                        <group string="Перелік майна">
                            <!-- <field name="owner_user_id" string="Requested By" invisible="1"/> -->
                            <!-- <field name="equipment_id"  context="{'default_company_id':company_id, 'default_category_id':category_id}"/> -->
                            <!-- <field name="category_id" groups="maintenance.group_equipment_manager" context="{'default_company_id':company_id}" attrs="{'invisible': [('equipment_id', '=', False)]}"/> -->
                            <field name="company_id" options="{'no_create': True, 'no_edit': True}" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <field name="asset_nfs_list_id" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <field name="user_id" readonly="True"/>
                            <field name="close_date" readonly="True"/>
                        </group>
                        <group string="Запит">
                            <!-- <field name="maintenance_team_id" options="{'no_create': True, 'no_open': True}"/> -->
                            <field name="type_id" options="{'no_create': True, 'no_edit': True}" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <field name="code" readonly="True"/>
                            <field name="request_date" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <field name="request_number" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <field name="document_id" options="{'no_create': True, 'no_edit': True}" attrs="{'readonly': [('stage_code', '=', 'approved')]}"/>
                            <!-- <field name="request_type" widget="radio"/> -->
                            <field name="active" invisible="1"/>
                            <field name="type_code" invisible="1"/>
                            <field name="stage_code" invisible="1"/>
                            <field name="request_item_count" invisible="1"/>
                        </group>
                    </group>
                    <field name='description' placeholder="Опис запиту"/>
                    <notebook>
                        <page name="config-data" string="Додаткові відомості" groups="base.group_erp_manager">
                            <field name="template_subject"/>
                            <field name="template_description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="request_view_tree" model="ir.ui.view">
        <field name="name">request.tree</field>
        <field name="model">asset.nfs.request</field>
        <field name="arch" type="xml">
            <tree string="Запит" multi_edit="1" sample="1">
                <field name="message_needaction" invisible="1"/>
                <field name="code" readonly="True"/>
                <field name="company_id" readonly="1"/>
                <field name="type_id" readonly="1"/>
                <field name="request_number" />
                <field name="request_date" />
                <field name="document_id"/>
                <!-- <field name="owner_user_id"/> -->
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <record id="request_view_pivot" model="ir.ui.view">
        <field name="name">request.pivot</field>
        <field name="model">asset.nfs.request</field>
        <field name="arch" type="xml">
            <pivot string="Запит" sample="1">
                <field name="user_id"/>
                <field name="stage_id"/>
            </pivot>
        </field>
    </record>

