<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dgf_document_type_view_tree" model="ir.ui.view">
        <field name="name">dgf.document.type.tree</field>
        <field name="model">dgf.document.type</field>
        <field name="arch" type="xml">
            <tree string="Типи документів" editable="bottom">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="dgf_document_type_action" model="ir.actions.act_window">
        <field name="name">Типи документів</field>
        <field name="res_model">dgf.document.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
